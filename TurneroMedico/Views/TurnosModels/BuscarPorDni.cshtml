@model IEnumerable<TurneroMedico.Models.TurnosModel>
@{
    ViewData["Title"] = "Buscar Turnos por DNI";
}

<h2>Buscar Turnos por DNI</h2>

<form asp-action="Search" method="post" class="mb-3">
    <div class="form-group">
        <label for="dni">DNI:</label>
        <input type="text" name="dni" id="dni" class="form-control" placeholder="Ingrese el DNI" required />
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-dark">Buscar</button>
        <a asp-action="BuscarPorDni" class="btn btn-secondary">Limpiar</a>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <h3>Resultados:</h3>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreApellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaTurno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EspecialidadElegida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoctorElegido)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaTurno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EspecialidadElegida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoctorElegido)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar turno</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <p>No se encontraron turnos para el DNI ingresado.</p>
}