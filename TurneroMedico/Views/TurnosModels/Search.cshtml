@model IEnumerable<TurneroMedico.Models.TurnosModel>

@{
    ViewData["Title"] = "Buscar Turno";
}

<h1>Buscar Turno</h1>

<!-- Search Form -->
<form asp-action="Search" method="post" class="mb-3">
    <div class="form-group">
        <label for="dni">DNI:</label>
        <input type="text" name="dni" id="dni" class="form-control" placeholder="Ingrese el DNI" required />
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-action="Search" class="btn btn-secondary">Limpiar</a>
    </div>
</form>

<!-- Results Table -->
@if (Model != null && Model.Any())
{
    <h3>Resultados:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombreApellido)</th>
                <th>@Html.DisplayNameFor(model => model.Dni)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.FechaTurno)</th>
                <th>@Html.DisplayNameFor(model => model.EspecialidadElegida)</th>
                <th>@Html.DisplayNameFor(model => model.DoctorElegido)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreApellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaTurno)</td>
                    <td>@Html.DisplayFor(modelItem => item.EspecialidadElegida)</td>
                    <td>@Html.DisplayFor(modelItem => item.DoctorElegido)</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Cancelar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        Por favor, realice una búsqueda para ver resultados.
    </div>
}
